<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:gravity="center"
        tools:text="图片来源"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/txt_color_666"
        android:background="@drawable/top_left_right_corner_normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/line"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_bottom_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_dialog_cancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:gravity="center"
        android:text="取消"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/txt_color_666"
        android:background="@drawable/item_bottom_left_right_corner_selector"/>

</LinearLayout>
