<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_11"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/dp_30">

        <com.aten.compiler.widget.RadiusImageView
            android:id="@+id/riv_product_pic"
            android:layout_width="@dimen/dp_158"
            android:layout_height="@dimen/dp_158"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_57"
            tools:src="@color/color_ff9466"
            app:qmui_corner_radius="@dimen/dp_20" />

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/riv_product_pic"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="黑檀木手工 凝时鲜颜肌活乳液 补水"
            android:textColor="@color/color_868686"
            android:textSize="@dimen/dp_26"
            android:textStyle="bold"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_seller_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_title"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_toRightOf="@+id/riv_product_pic"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="销售价：¥8.01"
            android:textColor="@color/color_868686"
            android:textSize="@dimen/sp_20"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_title"
            android:layout_marginLeft="@dimen/dp_280"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_toRightOf="@+id/riv_product_pic"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="库存：1"
            android:textColor="@color/color_868686"
            android:textSize="@dimen/sp_20"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_supply_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_seller_price"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/riv_product_pic"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="供货价：¥0.00"
            android:textColor="@color/color_868686"
            android:textSize="@dimen/sp_20"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_seller_price"
            android:layout_marginLeft="@dimen/dp_280"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/riv_product_pic"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="销量：0"
            android:textColor="@color/color_868686"
            android:textSize="@dimen/sp_20"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_supply_price"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/riv_product_pic"
            tools:text="创建时间：2018年09月06日 13:26"
            android:textColor="@color/color_868686"
            android:textSize="@dimen/sp_20"
            android:includeFontPadding="false"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_3"
        android:gravity="right|center_vertical"
        android:background="@android:color/white"
        android:paddingRight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="1"
            android:textColor="@color/color_868686"
            android:textSize="@dimen/sp_28" />

        <com.allen.library.shape.ShapeTextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_41"
            android:layout_marginLeft="@dimen/dp_30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            tools:text="下架"
            android:textColor="@color/color_ff8e67"
            android:textSize="@dimen/sp_24"
            app:shapeCornersRadius="@dimen/dp_10"
            app:shapeStrokeColor="@color/color_ff8e67"
            app:shapeStrokeWidth="@dimen/dp_2"
            android:visibility="gone"/>

        <com.allen.library.shape.ShapeTextView
            android:id="@+id/tv_02"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_41"
            android:layout_marginLeft="@dimen/dp_30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            tools:text="编辑"
            android:textColor="@color/color_ff8e67"
            android:textSize="@dimen/sp_24"
            app:shapeCornersRadius="@dimen/dp_10"
            app:shapeStrokeColor="@color/color_ff8e67"
            app:shapeStrokeWidth="@dimen/dp_2"
            android:visibility="gone"/>

        <com.allen.library.shape.ShapeTextView
            android:id="@+id/tv_03"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_41"
            android:layout_marginLeft="@dimen/dp_30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            tools:text="删除"
            android:textColor="@color/color_ff8e67"
            android:textSize="@dimen/sp_24"
            app:shapeCornersRadius="@dimen/dp_10"
            app:shapeStrokeColor="@color/color_ff8e67"
            app:shapeStrokeWidth="@dimen/dp_2"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>

