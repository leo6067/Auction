<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:background_normal="@color/white"
    android:layout_height="@dimen/dp_370"
    app:corner_radius="@dimen/dp_15"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/dialog_close"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/ic_login_delete_bg"/>


    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_50"

        android:text="友情提示"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/dialog_text"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_50"
        android:textSize="13sp"
        android:textStyle="bold"/>


    <com.allen.library.SuperButton
        android:id="@+id/sbtn_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_120"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36"
        app:sCornersRadius="@dimen/dp_35"
        app:sSelectorNormalColor="@color/color_ff8e67"
        app:sSelectorPressedColor="@color/kprogresshud_grey_color"
        app:sUseSelector="true" />


</com.ruffian.library.widget.RLinearLayout>