<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/afl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_61"
            android:src="@drawable/ic_login_close" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_180"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/logo" />




        <com.ruffian.library.widget.RTextView
            android:id="@+id/iv_common_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_86"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_150"
            android:layout_marginRight="@dimen/dp_80"
            app:background_normal="@color/home_title_bg"
            app:corner_radius="@dimen/dp_15"
            android:text="微信授权登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_30"
            android:gravity="center"
            />

        <LinearLayout
            android:id="@+id/arl_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_pwd_or_verif_contain"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_80"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:button="@drawable/shoppingcar_checkbox_style"
                android:checked="true"/>

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/cb_check"
                android:baselineAligned="false"
                android:lineSpacingExtra="@dimen/dp_10"
                android:text="已阅读并同意《超级仓库会员服务用户协议》和《隐私保护政策》"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/sp_20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_phone_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_90"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_30">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@color/windowbackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号登录"
                android:textColor="@color/color_3a3e4b"
                android:textSize="@dimen/sp_26" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@color/windowbackground" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



