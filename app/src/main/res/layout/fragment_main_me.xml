<?xml version="1.0" encoding="utf-8"?>
<com.aten.compiler.widget.ReboundNetScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_title_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="17sp" />


            <com.ruffian.library.widget.RRelativeLayout
                android:layout_width="@dimen/dp_661"
                android:layout_height="@dimen/dp_276"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_35"
                app:background_normal="@color/white"
                app:corner_radius="@dimen/dp_20">

                <com.aten.compiler.widget.CircleImageView
                    android:id="@+id/civ_head"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/ic_mine_head_default" />


                <com.ruffian.library.widget.RTextView
                    android:id="@+id/mine_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_toRightOf="@+id/civ_head"
                    android:drawableStart="@drawable/mine_vip"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/white"
                    app:background_normal="@color/home_title_bg"
                    app:corner_radius="@dimen/dp_15"
                    tools:text="3  " />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mine_vip"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:paddingTop="@dimen/dp_30"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_34"
                    android:textStyle="bold"
                    tools:text="Tom Design" />

                <LinearLayout
                    android:id="@+id/fl_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:paddingBottom="@dimen/dp_20">

                    <ImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:src="@drawable/mine_shop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进店"
                        android:textColor="@color/home_title_bg" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fl_shop"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/civ_head"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold"
                    tools:text="余额：124元" />

                <TextView
                    android:id="@+id/tv_super_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fl_shop"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/tv_balance"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold"
                    tools:text="捡漏币：3124个" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_balance"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_follow"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_40">


                        <TextView
                            android:id="@+id/tv_follow_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/home_title_bg"
                            android:textSize="@dimen/sp_24"
                            tools:text="208" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_24" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_40"
                        android:background="@color/home_title_bg" />

                    <LinearLayout
                        android:id="@+id/ll_fans"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_40">


                        <TextView
                            android:id="@+id/tv_fans_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/home_title_bg"
                            android:textSize="@dimen/sp_24"
                            tools:text="208" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_24" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_40"
                        android:background="@color/home_title_bg" />

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_40">


                        <TextView
                            android:id="@+id/tv_coin_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/home_title_bg"
                            android:textSize="@dimen/sp_24"
                            tools:text="208" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_24" />

                    </LinearLayout>

                </LinearLayout>

            </com.ruffian.library.widget.RRelativeLayout>

        </LinearLayout>

        <com.flyco.tablayout.SegmentTabLayout

            android:id="@+id/common_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tl_bar_stroke_width="@dimen/dp_0"
            app:tl_indicator_anim_enable="true"
            app:tl_indicator_color="@color/white"
            app:tl_indicator_corner_radius="0dp"
            app:tl_textBold="SELECT"
            app:tl_textSelectColor="@color/maroon"
            app:tl_textUnselectColor="@color/gray" />


        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70" />

    </LinearLayout>
</com.aten.compiler.widget.ReboundNetScrollView>
