<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_567"
        android:layout_height="@dimen/dp_743"
        android:layout_gravity="center"
        android:background="@drawable/ic_exchang_lottery_bg">

        <FrameLayout
            android:id="@+id/fl_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dp_33"
            android:paddingRight="@dimen/dp_30">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_27"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_exchang_lottery_times_close" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_super_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_105"
            android:layout_marginTop="@dimen/dp_333"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超级币："
                android:textColor="@color/color_565656"
                android:textSize="@dimen/sp_36" />

            <TextView
                android:id="@+id/tv_super_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                tools:text="15"
                android:textColor="@color/color_eeca22"
                android:textSize="@dimen/sp_42" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_raffles_remaining_num"
            android:layout_below="@+id/ll_super_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_105"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余抽奖次数："
                android:textColor="@color/color_565656"
                android:textSize="@dimen/sp_36" />

            <TextView
                android:id="@+id/tv_raffles_remaining_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                tools:text="15"
                android:textColor="@color/color_eeca22"
                android:textSize="@dimen/sp_42" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_exchange_lottery_times"
            android:layout_below="@+id/ll_raffles_remaining_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_105"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换抽奖次数："
                android:textColor="@color/color_565656"
                android:textSize="@dimen/sp_36" />

            <EditText
                android:id="@+id/et_exchange_lottery_times"
                android:layout_width="@dimen/dp_71"
                android:layout_height="@dimen/dp_47"
                android:background="@drawable/exchang_lottery_times_bg"
                android:gravity="center"
                android:text="1"
                android:singleLine="true"
                android:maxLength="3"
                android:textColor="@color/color_ff8e67"
                android:textSize="@dimen/sp_36"/>

            <com.allen.library.SuperButton
                android:id="@+id/sbtn_all"
                android:layout_width="@dimen/dp_71"
                android:layout_height="@dimen/dp_47"
                android:text="全部"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_20"
                android:textStyle="bold"
                app:sCornersRadius="@dimen/dp_10"
                app:sSelectorNormalColor="@color/color_ff8e67"
                app:sSelectorPressedColor="@color/kprogresshud_grey_color"
                app:sUseSelector="true" />

        </LinearLayout>

        <com.allen.library.SuperButton
            android:id="@+id/sbtn_sure_exchang"
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_96"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:text="确认兑换"
            android:textSize="@dimen/sp_40"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:sCornersRadius="@dimen/dp_40"
            app:sSelectorNormalColor="@color/color_ff8e67"
            app:sSelectorPressedColor="@color/kprogresshud_grey_color"
            app:sUseSelector="true" />

    </RelativeLayout>

</FrameLayout>