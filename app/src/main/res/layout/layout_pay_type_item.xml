<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_30"
    android:paddingLeft="@dimen/dp_36"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_pay_icon"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_73"
        android:layout_gravity="center_vertical"
        tools:src="@android:color/holo_red_light"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/dp_46"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="余额支付"
            android:textColor="@color/color_6d6d6d"
            android:textSize="@dimen/sp_28"/>

        <TextView
            android:id="@+id/tv_pay_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            tools:text="余额：100000元"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/sp_24"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_choose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/dp_51">

        <CheckBox
            android:id="@+id/cb_choose"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/cancle_order_checkbox_style" />

    </FrameLayout>

</LinearLayout>
