<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:corner_radius="@dimen/dp_15">


    <com.ruffian.library.widget.RImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:corner_radius="@dimen/dp_10" />


    <RelativeLayout
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="xxxxx名字" />


        <com.ruffian.library.widget.RTextView
            android:id="@+id/item_status"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="领先"
            android:textColor="@color/home_title_bg"
            app:background_normal="@color/white"
            app:border_color_normal="@color/home_title_bg"
            app:border_width_normal="@dimen/dp_5"

            app:border_color_unable="@color/gray"

            />


        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            tool:text="999999"
            android:textColor="@color/home_title_bg"/>


        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_status"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</com.ruffian.library.widget.RLinearLayout>