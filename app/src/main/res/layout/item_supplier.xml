<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:orientation="horizontal"
    android:padding="@dimen/dp_12">


    <com.ruffian.library.widget.RImageView
        android:id="@+id/item_head"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        app:corner_radius="@dimen/dp_15"
        app:icon_src_normal="@drawable/logo" />


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toRightOf="@id/item_level"
            android:textColor="@color/black"
            tools:text="名字" />


        <TextView
            android:id="@+id/item_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_marginTop="@dimen/dp_12"
            tools:text="评分 0" />


        <TextView
            android:id="@+id/item_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@+id/item_mark"
            tools:text="评分 0" />

        <TextView
            android:id="@+id/item_new"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/mine_next"
            tools:text="上新 0"
            android:textColor="@color/home_title_bg" />


    </RelativeLayout>


</LinearLayout>