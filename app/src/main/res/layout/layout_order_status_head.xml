<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="@dimen/dp_239"
        android:layout_height="@dimen/dp_239"
        android:layout_marginTop="@dimen/dp_144"
        android:layout_gravity="center_horizontal"
        tools:src="@drawable/ic_hook_press"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        tools:text="购买成功"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/sp_36"
        android:textStyle="bold"/>

    <com.ruffian.library.widget.RTextView
        android:id="@+id/tv_to_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_83"
        android:gravity="center"
        app:background_normal="@color/home_title_bg"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        app:corner_radius="@dimen/dp_8"
        android:text="返回首页"
        android:textSize="@dimen/sp_36"
        android:textColor="@android:color/white"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_look_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_83"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_37"
        android:background="@drawable/ic_order_status_gray_bg"
        android:text="查看订单"
        android:textSize="@dimen/sp_36"
        android:textColor="@color/color_1a1a1a"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_30"
        android:text="猜你喜欢"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_28"
        android:textStyle="bold"/>

</LinearLayout>
