<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_custom_title_w"/>

    <com.aten.compiler.widget.ReboundNetScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_img_contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_61">

                <ImageView
                    android:id="@+id/iv_qr_code_bg"
                    android:layout_width="@dimen/dp_600"
                    android:layout_height="@dimen/dp_850"
                    android:background="@color/color_a8a8a8" />

                <com.aten.compiler.widget.loadingView.SpinView02
                    android:id="@+id/iv_spinView"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerInParent="true"
                    app:sw_drawble="@drawable/ic_spinner_02"/>

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_qr_code"
                    android:layout_marginTop="@dimen/dp_626"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_qr_code_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_55"
                android:textStyle="bold"
                tools:text="店铺二维码"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/sp_36"
                android:includeFontPadding="false"/>

            <com.allen.library.SuperButton
                android:id="@+id/sbtn_generate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_76"
                android:text="保存"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_116"
                android:layout_marginLeft="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_80"
                android:textStyle="bold"
                android:textSize="@dimen/sp_36"
                app:sCornersRadius="@dimen/dp_20"
                app:sSelectorNormalColor="@color/color_ff3531"
                app:sSelectorPressedColor="@color/kprogresshud_grey_color"
                app:sUseSelector="true" />

        </LinearLayout>


    </com.aten.compiler.widget.ReboundNetScrollView>

</LinearLayout>
