<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_custom_title_w"/>

    <include layout="@layout/include_line_a"/>

    <com.aten.compiler.widget.tabLayout.SlidingTabLayout
        android:id="@+id/stb_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_87"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@android:color/white"
        app:tl_tab_space_equal="true"
        app:tl_indicator_color="@color/color_fe7f67"
        app:tl_indicator_corner_radius="@dimen/dp_4"
        app:tl_indicator_height="@dimen/dp_7"
        app:tl_indicator_width="@dimen/dp_50"
        app:tl_textSelectColor="@color/color_fe7f67"
        app:tl_textUnselectColor="@color/color_1a1a1a"
        app:tl_textsize="@dimen/sp_28"
        app:tl_textSelectSize="@dimen/sp_28"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
