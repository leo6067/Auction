<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.main.mine.activity.BalanceActivity">


    <include layout="@layout/layout_custom_title_w" />

    <include layout="@layout/include_line_a" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/asset_asset" />


    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_35"
        android:textColor="@color/black"
        android:textSize="27sp"
        tools:text="2312.00" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/tv_withdraw"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_70"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_35"
        android:gravity="center"
        android:text="提现"
        android:textColor="@color/white"
        app:background_normal="@color/home_blue"
        app:corner_radius="@dimen/dp_7" />


    <include layout="@layout/include_line_c" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dfk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_blue"
                tools:text="0.00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="待付款"
                android:textColor="@color/black" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dfh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_blue"
                tools:text="0.00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="待发货"
                android:textColor="@color/black" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dsh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_blue"
                tools:text="0.00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="待收货"
                android:textColor="@color/black" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_blue"
                tools:text="0.00" />

            <TextView
                android:id="@+id/djk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="冻结款"
                android:textColor="@color/black" />


        </LinearLayout>


    </LinearLayout>


    <include layout="@layout/include_line_c" />


    <com.aten.compiler.widget.tabLayout.SlidingTabLayout
        android:id="@+id/stb_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_1"
        app:tl_indicator_color="@color/color_fe7f67"
        app:tl_indicator_corner_radius="@dimen/dp_2"
        app:tl_indicator_height="@dimen/dp_4"
        app:tl_textSelectColor="@color/home_blue"
        app:tl_textUnselectColor="@color/color_191919"
        app:tl_textsize="@dimen/sp_28"
        app:tl_textSelectSize="@dimen/sp_28"
        app:tl_underline_color="@color/windowbackground"
        app:tl_underline_height="@dimen/dp_0_5"
        app:tl_indicator_width_equal_title="true"/>

    <com.aten.compiler.widget.CustomViewPager
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>