<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.aten.compiler.widget.ReboundNetScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_30">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_30"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/sp_24"
            tools:text="1111" />

    </com.aten.compiler.widget.ReboundNetScrollView>

    <com.allen.library.SuperButton
        android:id="@+id/stb_close"
        android:layout_width="@dimen/dp_237"
        android:layout_height="@dimen/dp_74"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_28"
        android:textStyle="bold"
        app:sCornersRadius="@dimen/dp_45"
        app:sSelectorNormalColor="@color/color_cccccc"
        app:sSelectorPressedColor="@color/kprogresshud_grey_color"
        app:sUseSelector="true" />

</LinearLayout>
