<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:focusableInTouchMode="true"
    android:orientation="vertical">



    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal">


        <com.ruffian.library.widget.RTextView
            android:layout_width="@dimen/dp_180"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_height="@dimen/dp_35"
            app:corner_radius="@dimen/dp_20"
            app:background_normal="@color/home_title_bg"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_19"
            android:text="Top百亿补贴"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_35"
            android:text="已补贴"
            android:textColor="@color/home_title_bg" />



        <TextView
            android:id="@+id/home_title_price"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/home_title_bg"
            android:textStyle="bold"
            android:layout_width="0dp"
            tools:text="12122"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/home_title_hint"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动玩法"
            android:textColor="@color/home_title_bg"/>




    </LinearLayout>







    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:id="@+id/title_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>



</LinearLayout>