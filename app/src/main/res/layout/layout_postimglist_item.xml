<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"

    android:layout_width="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:layout_height="@dimen/dp_187">

    <com.aten.compiler.widget.RadiusImageView
        android:id="@+id/iv_photo"
        tools:src="@drawable/ic_general_append_bg"
        android:layout_width="@dimen/dp_157"
        android:layout_height="@dimen/dp_157"
        android:layout_centerInParent="true"
        app:qmui_corner_radius="@dimen/dp_10"
        app:qmui_selected_mask_color="#66000000"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_m_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_photo"
        android:src="@drawable/delete_icon"
        android:visibility="visible" />

</RelativeLayout>
