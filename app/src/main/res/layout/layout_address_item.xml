<?xml version="1.0" encoding="utf-8"?>
<com.aten.compiler.widget.swipeMenuLayout.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sml_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_1"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_30">

        <TextView
            android:id="@+id/tv_person_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_44"
            tools:text="张三 17759563458"
            android:textColor="@color/color_424242"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold" />

        <com.allen.library.shape.ShapeTextView
            android:id="@+id/stv_default"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_31"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_toRightOf="@+id/tv_person_info"
            android:layout_marginTop="@dimen/dp_48"
            android:gravity="center"
            android:text="默认地址"
            android:textColor="@color/color_ff8e67"
            android:textSize="@dimen/sp_20"
            app:shapeCornersRadius="@dimen/dp_16"
            app:shapeStrokeColor="@color/color_ff8e67"
            app:shapeStrokeWidth="@dimen/dp_2" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_15">

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/ic_edit_bg" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_person_info"
            android:layout_marginTop="@dimen/dp_35"
            tools:text="福建省 厦门市 思明区 软件园 观日路52号之三观日路52号之三观日路52号之三"
            android:textColor="@color/color_cdcdcd"
            android:textSize="@dimen/sp_24" />

        <View
            android:layout_below="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@color/windowbackground" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/dp_113"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:text="删除"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_30"
        android:background="@color/color_fc435a"/>

</com.aten.compiler.widget.swipeMenuLayout.SwipeMenuLayout>
