<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
 >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

    <com.aten.compiler.widget.RadiusImageView
        android:id="@+id/riv_product_pic"
        android:layout_width="@dimen/dp_158"
        android:layout_height="@dimen/dp_158"
        app:qmui_corner_radius="@dimen/dp_20"
        tools:src="@color/color_ff9466" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/black"
            tools:text="212312312323123123" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_9"
            android:orientation="horizontal">


            <com.ruffian.library.widget.RImageView
                android:id="@+id/item_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon_src_normal="@drawable/mine_logo"
                app:is_circle="true" />

            <TextView
                android:id="@+id/item_supply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_qi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25" />


            <TextView
                android:id="@+id/item_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25" />


            <TextView
                android:id="@+id/item_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start" />


            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_weight="1"
                android:gravity="start"
              />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/tv_03"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_41"
                android:layout_weight="1"
                android:gravity="center"

                android:text="删除"
                android:textSize="@dimen/sp_24"
                android:visibility="gone"
                app:background_normal="@color/item_baoyou"
                app:corner_radius="@dimen/dp_10"
                app:text_color_normal="@color/white" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_41"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上架"
                android:textSize="@dimen/sp_24"
                android:visibility="gone"
                app:background_normal="@color/color_ff8e67"
                app:corner_radius="@dimen/dp_10"
                app:text_color_normal="@color/white" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_height="@dimen/dp_41"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下架"
                android:textSize="@dimen/sp_24"
                android:visibility="gone"
                app:background_normal="@color/color_ff8e67"
                app:corner_radius="@dimen/dp_10"
                app:text_color_normal="@color/white" />



        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

    <include layout="@layout/include_line_a"/>
</LinearLayout>

