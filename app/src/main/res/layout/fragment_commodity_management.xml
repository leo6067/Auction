<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/all_title_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_30"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/ic_sort_search"/>

            <EditText
                android:id="@+id/ed_keyword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_10"
                android:maxLength="30"
                android:hint="请输入你想要搜索的产品"
                android:textColorHint="@color/color_d0d0d0"
                android:textSize="@dimen/sp_24"/>

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_22"
                android:background="@color/color_ff8e67"/>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_43"
                android:paddingLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/color_ff8e67"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_screent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_22"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:layout_marginRight="@dimen/dp_6"
                android:textColor="@color/color_868686"
                android:textSize="@dimen/sp_30"/>

            <ImageView
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_23"
                android:src="@drawable/ic_screen_bg"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_82"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/color_ff8e67"
                android:textSize="@dimen/sp_28"/>

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/ic_select_bottom"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sales_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/color_ff8e67"
                android:textSize="@dimen/sp_28"/>

            <ImageView
                android:id="@+id/iv_sales_num"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/ic_no_select"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/color_ff8e67"
                android:textSize="@dimen/sp_28"/>

            <ImageView
                android:id="@+id/iv_price"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/ic_no_select"/>

        </LinearLayout>

    </LinearLayout>

    <com.aten.compiler.widget.CustomeRecyclerView
        android:id="@+id/crl_attri_list_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_30"
        android:background="@android:color/white"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_trash_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_91"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/dp_30"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/ic_trash_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空草稿箱"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/sp_28"/>


    </LinearLayout>

    <com.aten.compiler.widget.CustRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.75"
        app:srlEnablePreviewInEditMode="true">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

    </com.aten.compiler.widget.CustRefreshLayout>

</LinearLayout>
