<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"

    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.aten.compiler.widget.RadiusImageView
            android:id="@+id/item_head"
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_76"
            app:qmui_corner_radius="@dimen/dp_10"
            />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/item_level"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_32"
                 />


            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_toRightOf="@+id/item_level"
                android:textColor="@color/color_191919"
                tools:text="21231231321" />


            <TextView
                android:id="@+id/item_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_name"
                android:layout_marginTop="@dimen/dp_15"
                tools:text=" 评分 555" />


            <TextView
                android:id="@+id/item_fan"
                android:layout_marginStart="@dimen/dp_55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_name"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@+id/item_score"
                tools:text=" 粉丝555" />
        </RelativeLayout>


        <TextView
            android:id="@+id/item_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_35"
            android:drawableEnd="@drawable/ic_enter_03"
            android:drawablePadding="@dimen/dp_25"
            android:textColor="@color/home_title_bg" />


    </LinearLayout>


    <include layout="@layout/include_line_a" />


</LinearLayout>