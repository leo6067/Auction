<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/res_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/house_new"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/res_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="标题321231xxxxx"
            android:singleLine="true"
            android:lines="1"
            android:maxEms="16"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/res_imgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/res_text"
            android:padding="2dp"
            android:text="6图"
            android:textColor="@color/home_blue"
            android:textSize="10sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/res_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="2室2厅 | 6.66㎡ | 6/30层"
        android:textColor="@color/mine_text"
        android:textSize="11sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/res_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="思明 将军祠 "
                android:textColor="@color/mine_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/res_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="10dp"
                android:text="58同城：2018-7-19"
                android:textColor="@color/mine_text"
                android:textSize="11sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/res_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:text="1860万"
            android:textColor="@color/mine_money"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>