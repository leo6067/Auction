<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:orientation="horizontal"
    android:padding="@dimen/dp_12">


    <com.ruffian.library.widget.RImageView
        android:id="@+id/item_head"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        app:corner_radius="@dimen/dp_15"
        app:icon_src_normal="@drawable/logo" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            tools:text="sddsasdadsdsa" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:orientation="horizontal">


            <com.allen.library.shape.ShapeTextView
                android:id="@+id/tv_free_shipping"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/item_name"
                android:layout_marginStart="@dimen/dp_15"
                android:gravity="center"
                android:text="包邮"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_15"
                app:shapeCornersRadius="@dimen/dp_4"
                app:shapeSolidColor="@color/item_baoyou" />


            <TextView
                android:id="@+id/item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_name"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_toRightOf="@id/tv_free_shipping"
                android:textColor="@color/black"
                tools:text="库存23132132" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_num"
                android:layout_weight="1"
                tools:text="价格" />


            <com.ruffian.library.widget.RTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上架" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>