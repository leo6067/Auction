<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.aten.compiler.widget.RatioImageView
        android:id="@+id/iv_qr_code_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@color/color_ff8e67"
        app:ratio="0.707"
        app:forceEnable="false"/>

    <TextView
        android:id="@+id/tv_qr_code_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        tools:text="店铺二维码"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/sp_24"/>

    <com.allen.library.SuperButton
        android:id="@+id/sbtn_generate"
        android:layout_width="@dimen/dp_132"
        android:layout_height="@dimen/dp_50"
        android:text="生成"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_36"
        android:textSize="@dimen/sp_24"
        app:sCornersRadius="@dimen/dp_20"
        app:sSelectorNormalColor="@color/color_ff3531"
        app:sSelectorPressedColor="@color/kprogresshud_grey_color"
        app:sUseSelector="true" />

</LinearLayout>
