<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/all_receive_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_116"
        android:paddingTop="@dimen/dp_32"
        android:paddingBottom="@dimen/dp_32"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_32"
            android:src="@drawable/ic_sure_receive_good_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_67"
            android:layout_marginLeft="@dimen/dp_50"
            android:text="友情提示："
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_28"/>

        <TextView
            android:id="@+id/tv_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:text="订单一但确认收货则表示订单完成，平台则默认交易 成功,请买家确认收到货物没有问题再点确认收货哦~"
            android:textColor="@color/color_a8a8a8"
            android:textSize="@dimen/sp_22"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_73"
            android:background="@drawable/ic_cancle_order_btn_bg"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_26"/>


    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_233"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_sure_receive_good_top"/>

</RelativeLayout>
